<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:padding="@dimen/big_text_padding"
        android:text="@string/fund_wallet"
        android:id="@+id/tv_fund_wallet_title"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_height="wrap_content" />
    <EditText
        android:background="@drawable/edit_text_box"
        android:hint="@string/amount"
        android:inputType="number"
        android:id="@+id/edt_amount"
        android:layout_margin="@dimen/big_space_margin"
        android:padding="@dimen/edit_text_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:text="@string/fund_wallet"
        android:id="@+id/btn_fund_wallet"
        android:layout_margin="@dimen/big_space_margin"
        android:textColor="@color/colorWhite"
        android:background="@color/acceptedColor"
        android:layout_height="wrap_content" />

</LinearLayout>